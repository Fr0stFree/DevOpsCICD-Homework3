global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]
        labels:
          group: "prometheus"

{% if node_exporter_targets | length > 0 %}
  - job_name: "node_exporter"
    static_configs:
      - targets: "{{ node_exporter_targets }}"
        labels:
          group: "node_exporter"
{% endif %}
